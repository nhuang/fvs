@model FestivalScheduler.Models.Resouces.SysSettingViewModel

@{
    ViewBag.Title = "Create";
    string urlAddress = ViewBag.UrlAddress;
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SysSettingViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.KeyName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="KeyName" name="KeyName" class="k-textbox" placeholder="KeyName" required validationmessage="Please enter {0}" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ValueType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownList()
                    .Name("ValueType")
                    .DataTextField("Text")
                    .DataValueField("Value")
                    .BindTo(new List<SelectListItem>() {
                      new SelectListItem() {
                          Text = "String",
                          Value = "1"
                      },
                      new SelectListItem() {
                          Text = "Integer",
                          Value = "2"
                      },
                      new SelectListItem() {
                          Text = "Double",
                          Value = "3"
                      },
                        new SelectListItem() {
                          Text = "DateTime",
                          Value = "4"
                      },
                        new SelectListItem() {
                          Text = "Boolean",
                          Value = "5"
                      },
                        new SelectListItem() {
                          Text = "Description",
                          Value = "6"
                      }
                    })
                    .Value("1")
                )
                @Html.ValidationMessageFor(model => model.ValueType)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Value, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="Value" name="Value" class="k-textbox" placeholder="Value" required validationmessage="Please enter {0}" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KeyGroup, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="KeyGroup" name="KeyGroup" class="k-textbox" placeholder="Group keys as a list" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            @string.Format("Image url example http:://{0}/Images/xxx.png", @urlAddress)
            <div class="col-md-10">
                <textarea id="Description" name="Description" rows="10" cols="30" style="width:100%;height:400px"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $("#Description").kendoEditor({
        tools: [
            "bold",
            "italic",
            "underline",
            "strikethrough",
            "justifyLeft",
            "justifyCenter",
            "justifyRight",
            "justifyFull",
            "insertUnorderedList",
            "insertOrderedList",
            "indent",
            "outdent",
            "createLink",
            "unlink",
            "insertImage",
            "subscript",
            "superscript",
            "createTable",
            "addRowAbove",
            "addRowBelow",
            "addColumnLeft",
            "addColumnRight",
            "deleteRow",
            "deleteColumn",
            "viewHtml",
            "formatting",
            "fontName",
            "fontSize",
            "foreColor",
            "backColor"
        ]
    });
</script>