
<h2>Upload Files</h2>

<div class="configuration k-widget k-header">   
    <p>
        The Upload can be used as a drop-in replacement for file input elements.
    </p>
</div>
@using (Html.BeginForm("Submit", "Upload", FormMethod.Post))
{ 
    @(Html.Kendo().Upload()
            .Name("files")
      )  
      

<p>
    <input type="submit" value="Upload" class="k-button" />
</p>
}